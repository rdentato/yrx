	@shell{sort \< '$2.$3' \> '${sorted-index}'}\
	@write{$2-index.html;\
		@{\\chapter\{Index\}}\N\
		\<PRE\>@do-index{@read{${sorted-index}}}\</PRE\>}

do-index:\N<L1>=@index-heading{$1,@var{IH;_}}
index-heading:<L1>,$1=@end
