!	$1=sort key, $2=text, $3.$4=section, $5=address
do-index:\;\L*\t*\t*.*\t*\n=\
	\<A HREF\="$5"\>$2\</A\> \
	@set{fill;@length{@rawtext{$2 }}}\
	@substring{@and{${fill};1};@sub{54;${fill}};\
		. . . . . . . . . . . . . . . . . . . . . . . . . .}\
	@right{3;$3}.$4\<BR\>\n
do-index:=@err{internal do-index\n}@end

